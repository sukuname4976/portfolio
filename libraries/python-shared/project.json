{
  "name": "python-shared",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libraries/python-shared",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo 'Python library - no build step required'"
      },
      "inputs": ["production", "libraries/python-shared/**/*"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "python -m pytest ./libraries/python-shared/ --if-present || echo 'No tests configured'"
      }
    }
  }
}

