{
  "name": "Kotlin Devcontainer",
  "dockerComposeFile": "docker-compose.yaml",
  "service": "kotlin-workplace-devcontainer",
  "workspaceFolder": "/monorepo-root-as-kotlin-workspace",
  "customizations": {
    "vscode": {
      "extensions": [
        "fwcd.kotlin",
        "vscjava.vscode-gradle",
        "ms-azuretools.vscode-docker",
        "redhat.vscode-yaml",
        "exiasr.hadolint",
        "davidanson.vscode-markdownlint"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "[kotlin]": {
          "editor.defaultFormatter": "fwcd.kotlin"
        }
      }
    }
  },
  "postCreateCommand": "kotlin --version && echo 'Kotlin の開発コンテナが正常に起動しました'",
  "forwardPorts": [
    8000
  ]
}