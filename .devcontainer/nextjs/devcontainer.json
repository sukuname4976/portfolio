{
  "name": "Next.js Devcontainer",
  "dockerComposeFile": "docker-compose.yaml",
  "service": "nextjs-workspace-devcontainer",
  "workspaceFolder": "/monorepo-root-as-nextjs-workspace",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/anthropics/devcontainer-features/claude-code:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        // Next.js
        "biomejs.biome",
        // 汎用
        "davidanson.vscode-markdownlint",
        "eamodio.gitlens",
        "editorconfig.editorconfig",
        "exiasr.hadolint",
        "github.vscode-github-actions",
        "gruntfuggly.todo-tree",
        "mechatroner.rainbow-csv",
        "mhutchie.git-graph",
        "ms-azuretools.vscode-docker",
        "MS-CEINTL.vscode-language-pack-ja",
        "oderwat.indent-rainbow",
        "redhat.vscode-yaml",
        "streetsidesoftware.code-spell-checker",
        "usernamehw.errorlens"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "biomejs.biome"
      }
    }
  },
  "postCreateCommand": "node --version && npm --version && gh --version && claude --version && echo 'Next.js の開発コンテナが正常に起動しました'",
  "forwardPorts": [
    3000
  ]
}