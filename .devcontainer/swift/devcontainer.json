{
  "name": "Swift Devcontainer",
  "dockerComposeFile": "docker-compose.yaml",
  "service": "swift-workplace-devcontainer",
  "workspaceFolder": "/monorepo-root-as-swift-workspace",
  "customizations": {
    "vscode": {
      "extensions": [
        "sswg.swift-lang",
        "vadimcn.vscode-lldb",
        "ms-azuretools.vscode-docker",
        "redhat.vscode-yaml",
        "exiasr.hadolint",
        "davidanson.vscode-markdownlint"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "[swift]": {
          "editor.defaultFormatter": "sswg.swift-lang"
        }
      }
    }
  },
  "postCreateCommand": "swift --version && echo 'Swift の開発コンテナが正常に起動しました'",
  "forwardPorts": [
    8000
  ]
}