{
  "name": "Swift Devcontainer",
  "dockerComposeFile": "docker-compose.yaml",
  "service": "swift-workspace-devcontainer",
  "workspaceFolder": "/monorepo-root-as-swift-workspace",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/anthropics/devcontainer-features/claude-code:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        // Swift
        "sswg.swift-lang",
        "vadimcn.vscode-lldb",
        // 汎用
        "davidanson.vscode-markdownlint",
        "eamodio.gitlens",
        "exiasr.hadolint",
        "github.vscode-github-actions",
        "mechatroner.rainbow-csv",
        "mhutchie.git-graph",
        "ms-azuretools.vscode-docker",
        "MS-CEINTL.vscode-language-pack-ja",
        "oderwat.indent-rainbow",
        "redhat.vscode-yaml",
        "streetsidesoftware.code-spell-checker"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "[swift]": {
          "editor.defaultFormatter": "sswg.swift-lang"
        }
      }
    }
  },
  "postCreateCommand": {
    "gh-extensions": "gh extension install yahsan2/gh-sub-issue",
    "swift-version": "echo '=== Swift ===' && swift --version",
    "gh-version": "echo '=== GitHub CLI ===' && gh --version",
    "claude-version": "echo '=== Claude Code ===' && claude --version",
    "message": "echo 'Swift の開発コンテナが起動し、セットアップを実行中...'"
  },
  "forwardPorts": [
    8000
  ]
}